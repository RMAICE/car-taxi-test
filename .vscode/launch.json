    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "node in docker",
            "remoteRoot": "/usr/src/app",
            "localRoot": "${workspaceFolder}/",
            "port": 9229,
            "restart": true
        },
        {
            "name": "node local",
            "type": "node",
            "request": "attach",
            "restart": true,
            "port": 9229,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/src/",
            "protocol": "inspector"
        }
    ]
}
